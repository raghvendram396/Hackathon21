<%- include("basic-ejs") -%>
    <div class="container register">
                <div class="row">
                    <div class="col-md-4 register-left">
                        <img src="https://image.ibb.co/n7oTvU/logo_white.png">
                        <h2>Welcome</h2>
                        <p>We need honest people with a good analytical skills, sound business judgement and a strong work ethic</p>
						<p>We want to hire passionate, innovative individuals with a sense of urgency and a take charge approach to life.</p>
						<div>
							<h3 >Already Posted?</h3>
							<form action="/hiring" method="post">
								<input type="submit" name="" value="Login"/>
								</form> 
						</div>
						
                    </div>
                    <div class="col-md-8 register-right">
                        <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#" role="tab" aria-controls="home" aria-selected="true">New Hirer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="/" role="tab" aria-controls="profile" aria-selected="false">Cancel</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <h3 class="register-heading">Post A JOB</h3>
								<h4><%=msg%></h4>
                                <div class="row register-form">
									<form action="/registrationform" method="post">
										
                                    <div class="col-md-12 mode1">
										
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Company Name *" name="company" value="" />
                                        </div>
										<div class="form-group">
											<div class="form-group">
                                            <input type="password" class="form-control"  placeholder="CIN Number *" name="cin" value="" />
                                        </div>
                                            <input type="password" class="form-control" placeholder="Set Password *" name="pass" value="" />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Post *" name="post" value="" />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Job Title *" name="jobtitle" value="" />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control"  placeholder="Work Experience *" name="wexperience" value="" />
                                        </div>
                                    </div>
										
										
                                    <div class="col-md-12 mode1">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Salary *" value="" name="salary" />
                                        </div>
                                        <div class="form-group">
											<textarea type="text" class="form-control" rows="2" cols="100" placeholder="Location *" name="location"></textarea>
                                        </div>
										<div class="form-group">
											<textarea name="description" type="text" class="form-control" rows="2" cols="100" placeholder="Description *"></textarea>
                                        </div>
                                        
                                        <input type="submit" class="btnRegister"  value="Post"/>
                                    </div>	
										</form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
</body>
</html>
